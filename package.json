{
  "name": "smeditor",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run core:build-editor && npm run core:build && npm run guide:build",
    "core:build": "tsc && vite build",
    "core:build-editor": "tsc --outFile app/src/util/custom-script/smlib.d.ts --emitDeclarationOnly --declaration  --stripInternal --isolatedModules false --noEmit false",
    "app:dev": "nw ./nw --debug",
    "app:build": "node nwbuild.js",
    "preview": "vite preview",
    "prepare": "husky install",
    "guide:dev": "vitepress dev guide",
    "guide:build": "vitepress build guide",
    "guide:preview": "vitepress preview guide"
  },
  "devDependencies": {
    "@rollup/plugin-dynamic-import-vars": "^2.1.2",
    "@types/file-saver": "^2.0.5",
    "@types/howler": "^2.2.7",
    "@types/node": "^20.4.8",
    "@types/nw.js": "^0.13.16",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.8",
    "@types/webfontloader": "^1.6.35",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.3.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.37.5",
    "husky": "^8.0.3",
    "lint-staged": "^15.5.2",
    "nw": "^0.90.0-sdk",
    "nw-builder": "^4.8.1",
    "prettier": "^3.0.1",
    "prettier-plugin-glsl": "^0.1.2",
    "typescript": "^5.8.3",
    "vite": "^7.1.3",
    "vite-plugin-pwa": "^1.0.3",
    "vitepress": "^1.6.4"
  },
  "dependencies": {
    "@pixi/filter-adjustment": "^5.0.0",
    "@types/dom-webcodecs": "^0.1.11",
    "@vitejs/plugin-react": "^5.0.1",
    "base85": "^3.1.0",
    "bezier-easing": "^2.1.0",
    "buffer": "^6.0.3",
    "expr-eval": "^2.0.2",
    "file-saver": "^2.0.5",
    "file-system-access": "^1.0.4",
    "fourier-transform": "^1.1.2",
    "howler": "^2.2.3",
    "jszip": "^3.10.1",
    "markdown-it": "^14.1.0",
    "monaco-editor": "^0.52.2",
    "mp4-muxer": "^3.0.3",
    "pixi.js": "^7.0.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-inlinesvg": "^4.2.0",
    "scroll-into-view-if-needed": "^3.0.3",
    "semver": "^7.5.4",
    "tippy.js": "^6.3.7",
    "vite-plugin-monaco-editor-esm": "^2.0.2",
    "webfontloader": "^1.6.28"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.tsx": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.{html,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking",
      "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "tsconfigRootDir": ".",
      "project": [
        "./tsconfig.json"
      ]
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "ignorePatterns": [
      "*.js",
      "*.d.ts"
    ],
    "rules": {
      "require-await": "off",
      "@typescript-eslint/no-unused-vars": "off",
      "@typescript-eslint/require-await": "off",
      "@typescript-eslint/no-non-null-assertion": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/no-duplicate-enum-values": "warn",
      "@typescript-eslint/no-floating-promises": "off",
      "@typescript-eslint/no-non-null-asserted-nullish-coalescing": "warn",
      "@typescript-eslint/no-redundant-type-constituents": "warn",
      "@typescript-eslint/no-require-imports": "warn",
      "@typescript-eslint/no-unnecessary-boolean-literal-compare": "warn",
      "@typescript-eslint/no-unnecessary-qualifier": "warn",
      "@typescript-eslint/no-unsafe-assignment": "off",
      "@typescript-eslint/no-unsafe-argument": "off",
      "@typescript-eslint/no-unsafe-call": "off",
      "@typescript-eslint/no-unsafe-member-access": "off",
      "@typescript-eslint/no-misused-promises": "off",
      "@typescript-eslint/prefer-optional-chain": "warn",
      "@typescript-eslint/restrict-template-expressions": "off",
      "@typescript-eslint/restrict-plus-operands": "off",
      "no-constant-condition": [
        "error",
        {
          "checkLoops": false
        }
      ]
    },
    "root": true,
    "globals": {
      "nw": "readonly"
    }
  }
}
