{
  "name": "smeditor",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "app-dev": "cross-env EXECUTION_MODE='DEBUG' NODE_ENV='production' nwbuild ./nw/**/* --mode=run --version=latest --flavor=sdk --outDir=build",
    "app-osx": "nwbuild ./nw/**/* --mode=build --version=latest --flavor=normal --platform=osx --outDir=build/mac",
    "app-linux": "nwbuild ./nw/**/* --mode=build --version=latest --flavor=normal --platform=linux --outDir=build/linux",
    "app-windows": "nwbuild ./nw/**/* --mode=build --version=latest --flavor=normal --platform=win --outDir=build/windows",
    "app-build": "npm run -s app-windows & npm run -s app-osx & npm run -s app-linux",
    "preview": "vite preview",
    "prepare": "husky install",
    "postinstall": "patch-package"
  },
  "devDependencies": {
    "@types/file-saver": "^2.0.5",
    "@types/howler": "^2.2.7",
    "@types/node": "^18.11.18",
    "@types/nw.js": "^0.13.16",
    "@types/webfontloader": "^1.6.35",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "nw-builder": "^4.0.9",
    "prettier": "^2.8.1",
    "prettier-plugin-glsl": "^0.0.8",
    "typescript": "^4.9.4",
    "vite": "^3.2.3"
  },
  "dependencies": {
    "@pixi/filter-adjustment": "^5.0.0",
    "buffer": "^6.0.3",
    "expr-eval": "^2.0.2",
    "file-saver": "^2.0.5",
    "file-system-access": "^1.0.4",
    "howler": "^2.2.3",
    "jszip": "^3.10.1",
    "pixi.js": "^7.0.4",
    "scroll-into-view-if-needed": "^3.0.3",
    "webfontloader": "^1.6.28"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.{html,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "main": "nw/index.html",
  "node-remote": [
    "http://127.0.0.1:5173",
    "https://tillvit.github.io/smeditor"
  ],
  "fullscreen": true,
  "chromium-args": "--enable-webgl2-compute-context --force-discrete-gpu --enable-high-resolution-time --enable-zero-copy --autoplay-policy no-user-gesture-required",
  "nwbuild": {
    "srcDir": "./nw/**",
    "version": "latest",
    "flavor": "sdk"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking",
      "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "tsconfigRootDir": ".",
      "project": [
        "./tsconfig.json"
      ]
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "@typescript-eslint/no-non-null-assertion": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/no-duplicate-enum-values": "warn",
      "@typescript-eslint/no-floating-promises": "off",
      "@typescript-eslint/no-non-null-asserted-nullish-coalescing": "warn",
      "@typescript-eslint/no-redundant-type-constituents": "warn",
      "@typescript-eslint/no-require-imports": "warn",
      "@typescript-eslint/no-unnecessary-boolean-literal-compare": "warn",
      "@typescript-eslint/no-unnecessary-qualifier": "warn",
      "@typescript-eslint/no-unsafe-assignment": "off",
      "@typescript-eslint/no-unsafe-argument": "off",
      "@typescript-eslint/no-unsafe-call": "off",
      "@typescript-eslint/no-unsafe-member-access": "off",
      "@typescript-eslint/no-misused-promises": "off",
      "@typescript-eslint/prefer-optional-chain": "warn",
      "@typescript-eslint/restrict-template-expressions": "off",
      "@typescript-eslint/restrict-plus-operands": "off"
    },
    "root": true,
    "globals": {
      "nw": "readonly"
    }
  }
}
